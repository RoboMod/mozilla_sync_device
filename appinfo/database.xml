<?xml version="1.0" encoding="ISO-8859-1"?>
<database>
  <name>*dbname*</name>
  <create>true</create>
  <overwrite>false</overwrite>
  <charset>utf8</charset>

  <table>
    <name>*dbprefix*mozilla_sync_device_keys</name>
    <declaration>
      <field>
        <name>id</name>
        <type>integer</type>
        <default>0</default>
        <notnull>true</notnull>
        <autoincrement>true</autoincrement>
        <unsigned>true</unsigned>
        <length>4</length>
      </field>

      <field>
        <name>username</name>
        <type>text</type>
        <notnull>true</notnull>
        <length>64</length>
      </field>

      <field>
        <name>recoverykey</name>
        <type>text</type>
        <notnull>true</notnull>
        <length>128</length>
      </field>
    </declaration>
  </table>

</database>
